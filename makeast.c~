Node* build_node1(Node* p1){
  Node *p;
  if(p = (Node *)malloc(sizeof(Node)) == NULL){
    yyerror("out of memory");
  }
  p->t;
  p->child = p1;
  p->brother = NULL;

  return p;
};

Node* build_node2(NType t, Node* p1, Node* p2){
  Node *p;
  if(p = (Node *)malloc(sizeof(Node)) == NULL){
    yyerror("out of memory");
  }
  p->t;
  p->child = p1;
  p1->brother = p2;
  p->brother = NULL;

  return p;
};

Node* build_node3(NType t, Node* p1, Node* p2, Node* p3){
  Node *p;
  if(p = (Node *)malloc(sizeof(Node)) == NULL){
    yyerror("out of memory");
  }
  p->t;
  p->child = p1;
  p1->brother = p2;
  p2->brother = p3;
  p->brother = NULL;

  return p;
};

Node* build_node4(NType t, Node* p1, Node* p2, Node* p3, Node* p4){
  Node *p;
  if(p = (Node *)malloc(sizeof(Node)) == NULL){
    yyerror("out of memory");
  }
  p->t;
  p->child = p1;
  p1->brother = p2;
  p2->brother = p3;
  p3->brother = p4;
  p->brother = NULL;

  return p;
};


Node* build_num_node(NType t, int n){
  Node *p;
  if(p = (Node *)malloc(sizeof(Node)) == NULL){
    yyerror("out of memory");
  }
  p->t;
  p->ivalue = n;
  p->child = NULL;
  p->brother = NULL;

  return p;

};

Node* build_ident_node(NType t, char *s){
  Node *p;
  if(p = (Node *)malloc(sizeof(Node)) == NULL){
    yyerror("out of memory");
  }
  p -> t;
  if(p -> variable = (char *)malloc(sizeof(MAXBUF)) == NULL){
      yyerror("out of memory");
    }
    strncpy(p -> variable, s, MAXBUF);
    p -> child = NULL;
    p -> brother = NULL;

    return p;
}
      
